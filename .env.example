# Configuración de Entorno - UniBeep
# Copiar a .env y configurar con valores reales

# Aplicación
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tu-dominio-azure.com

# Base de Datos Azure MySQL
DB_HOST=tu-servidor.mysql.database.azure.com
DB_PORT=3306
DB_NAME=unibeep_db
DB_USER=tu_usuario@tu-servidor
DB_PASS=tu_contraseña_segura

# JWT Secret (generar uno aleatorio y seguro)
JWT_SECRET=CAMBIAR_POR_SECRETO_LARGO_Y_ALEATORIO_MINIMO_64_CARACTERES

# Email (para verificación)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu@email.com
MAIL_PASSWORD=tu_contraseña_app
MAIL_FROM_ADDRESS=noreply@unibeep.com
MAIL_FROM_NAME="UniBeep - CampusRide"

# Pagos (Stripe u otro)
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx

# Azure Storage (opcional, para archivos)
AZURE_STORAGE_ACCOUNT=tu_cuenta
AZURE_STORAGE_KEY=tu_clave
AZURE_STORAGE_CONTAINER=uploads
